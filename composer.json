{
  "name": "algmass/whatsapp",
  "description": "Laravel WhatsApp integration using Green API (text messages only)",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Ali Algmass",
      "email": "you@example.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "illuminate/support": "*",
    "green-api/whatsapp-api-client-php": "*"
  },
  "autoload": {
    "psr-4": {
      "Algmass\\WhatsApp\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Algmass\\WhatsApp\\Providers\\WhatsAppServiceProvider"
      ],
      "aliases": {
        "WhatsApp": "Algmass\\WhatsApp\\Facades\\WhatsApp"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
